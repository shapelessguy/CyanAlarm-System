<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <Switch
        android:id="@+id/Real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:checked="true"
        android:text="Long alarm  "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="18sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/allAlarms"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="System alarmed"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Real" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ultrasonic sensors  "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onLive" />

    <Switch
        android:id="@+id/Alarm1"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:checked="true"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Sensor 1  "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Switch
        android:id="@+id/Alarm3"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:checked="true"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Sensor 3  "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Alarm2" />

    <Switch
        android:id="@+id/Alarm2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:checked="true"
        android:switchTextAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Sensor 2  "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Alarm1" />

    <Button
        android:id="@+id/onLive"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="79dp"
        android:layout_height="22dp"
        android:layout_marginStart="183dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="183dp"
        android:background="#00796B"
        android:text="On-Air"
        android:textColor="#FFEBEE"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allAlarms" />

</androidx.constraintlayout.widget.ConstraintLayout>